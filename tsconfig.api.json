{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/pages/api",
    "rootDir": "./pages/api",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "pages/api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}